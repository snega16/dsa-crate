def orderAgnosticBS(arr, target):
    start = 0
    end = len(arr) - 1

    # finding arr is sorted in which order
    if arr[start] < arr[end]:
        isAsc = True
    else:
        isAsc = False

    while start <= end:
        mid = (start + end) // 2
        if arr[mid] == target:
            return mid
        if isAsc:
            if target > arr[mid]:
                end = mid - 1
            else:
                start = mid + 1
        else:
            if target > arr[mid]:
                end = mid - 1
            else:
                start = mid + 1
    return -1

arr = [9,8,7,6,5,4,3,2,1]
print(orderAgnosticBS(arr, 8))
